package cs311.hw4;

import java.util.Comparator;

/**
 *
 * @author Quy
 */
public class InsertionSort implements ISort{
    
    
    public InsertionSort(){
        
    }
    @Override
    public void sort(Object[] arr, int start, int end, Comparator comp) {
        
        if(arr==null || arr.length == 0){
            System.out.println("Invalid array for sorting");
        }
        if(start > end || start > arr.length || start < 0 || end > arr.length || end < 0){
            System.out.println("Invalid start and end values");
        }
        for (int i=start; i < end; i++) {
        Object insert = arr[i];
        int j;
        for (j = i - 1; j >= 0; j--) {
            if (comp.compare(arr[j], insert) <= 0) break;
            arr[j + 1] = arr[j];
        }
        arr[j + 1] = insert;
    }
    }
    

                          
    
}
